<article id="article-form">
    <div class="card">
        <div class="card-header">
            <h5>{{title}}</h5>
        </div>
        <div class="card-body">
            <p class="card-text">{{content}}</p>
            <a class="float-start" href="/articles">back</a>
            <button type="button" class="btn btn-primary float-end ms-2" onclick="deleteArticle({{id}})">삭제</button>
            <button type="button" class="btn btn-primary float-end ms-2" onclick="enableUpdateForm()">수정</button>
        </div>
    </div>
</article>