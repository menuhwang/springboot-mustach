<article hidden class="container" id="update-form">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <!--- name 속성안에 Dto의 필드명을 써주면 된다 -->
        <input type="text" class="form-control" id="update-title" value="{{title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <!--- name 속성안에 Dto의 필드명을 써주면 된다 -->
        <textarea class="form-control" rows="3" id="update-content">{{content}}</textarea>
    </div>
    <button class="btn btn-primary" onclick="update({{id}})">Submit</button>
    <button class="btn btn-primary" onclick="disableUpdateForm()">Cancel</button>
</article>