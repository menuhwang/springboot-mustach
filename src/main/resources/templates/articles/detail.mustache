            <button type="button" class="btn btn-primary">삭제</button>
            <a href="/articles">back</a>
        </article>
    {{/article}}
</div>
{{>layout/footer}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
